<T3DataStructure>
<meta>
    <langDisable>1</langDisable>
</meta>
 <sheets>
  <sDEF>
   <ROOT>
     <TCEforms>
      <sheetTitle>SLUB Veranstaltungen: Listen und Einzelansicht</sheetTitle>
     </TCEforms>
     <type>array</type>
     <el>
      <switchableControllerActions>
       <TCEforms>
         <label>Select function</label>
		<onChange>reload</onChange>
         <config>
          <type>select</type>
          <items>

            <numIndex index="0">
             <numIndex index="0">Listenansicht (list + single)</numIndex>
             <numIndex index="1">Event->list;Event->show;Event->showNotfound</numIndex>
            </numIndex>

            <numIndex index="1">
             <numIndex index="0">Einzelansicht (single)</numIndex>
             <numIndex index="1">Event->show;Event->showNotfound</numIndex>
            </numIndex>

           </items>
         </config>
       </TCEforms>
      </switchableControllerActions>

		<settings.categorySelection>
			<TCEforms>
				<label>Only Show Categories:</label>
				<displayCond>FIELD:switchableControllerActions:=:Event->list;Event->show;Event->showNotfound</displayCond>
				<config>
					<type>select</type>
					<renderMode>tree</renderMode>
					<treeConfig>
						<parentField>parent</parentField>
						<appearance>
							<expandAll>TRUE</expandAll>
							<showHeader>TRUE</showHeader>
						</appearance>
					</treeConfig>

					<foreign_table>tx_slubevents_domain_model_category</foreign_table>
					<foreign_table_where>AND (tx_slubevents_domain_model_category.sys_language_uid = 0 OR tx_slubevents_domain_model_category.l10n_parent = 0) ORDER BY tx_slubevents_domain_model_category.sorting DESC</foreign_table_where>
					<size>5</size>
					<autoSizeMax>30</autoSizeMax>
					<minitems>0</minitems>
					<maxitems>99</maxitems>
				</config>
			</TCEforms>
		</settings.categorySelection>

		<settings.pidListing>
			<TCEforms>
				<exclude>1</exclude>
				<label>Listing Page</label>
				<config>
					<type>group</type>
					<internal_type>db</internal_type>
					<allowed>pages</allowed>
					<size>1</size>
					<maxitems>1</maxitems>
					<minitems>0</minitems>
					<show_thumbs>1</show_thumbs>
				</config>
			</TCEforms>
		</settings.pidListing>

		<settings.pidDetails>
			<TCEforms>
				<exclude>1</exclude>
				<label>Details Page</label>
<!--
				<displayCond>FIELD:switchableControllerActions:=:Event->list;Event->show</displayCond>
-->
				<config>
					<type>group</type>
					<internal_type>db</internal_type>
					<allowed>pages</allowed>
					<size>1</size>
					<maxitems>1</maxitems>
					<minitems>0</minitems>
					<show_thumbs>1</show_thumbs>
				</config>
			</TCEforms>
		</settings.pidDetails>

		<settings.pidSubscribeForm>
			<TCEforms>
				<exclude>1</exclude>
				<label>Subscribe Form</label>
				<config>
					<type>group</type>
					<internal_type>db</internal_type>
					<allowed>pages</allowed>
					<size>1</size>
					<maxitems>1</maxitems>
					<minitems>0</minitems>
					<show_thumbs>1</show_thumbs>
				</config>
			</TCEforms>
		</settings.pidSubscribeForm>

     </el>
   </ROOT>
  </sDEF>
 </sheets>
</T3DataStructure>
